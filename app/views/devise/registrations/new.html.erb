<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="form-group">
        <%= f.label :name, "ユーザーネーム" %><br />
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
        <% if @user.errors.any? %>
        <p class="text-danger"><%= @user.errors.messages[:name][0] %></p>

      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, class: "form-control" %>
        <p class="text-danger"><%= @user.errors.messages[:email][-1] %></p>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        <p class="text-danger"><%= @user.errors.messages[:password][-1] %></p>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "パスワード（確認）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        <p class="text-danger"><%= @user.errors.messages[:password_confirmation][0] %></p>

      </div>

      <div class="form-group">
        <%= f.label :image, "プロフィール画像" %><br />
        <%= f.text_field :image, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :profile, "プロフィール" %><br />
        <%= f.text_area :profile, autofocus: true, class: "form-control" %>
        <p class="text-danger"><%= @user.errors.messages[:profile][0] %></p>
      </div>

      <div class="form-group">
        <%= f.submit "登録する" %>
      </div>
    <% end %>
    <% end %>
  </div>
</div>
