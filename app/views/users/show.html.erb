<div class="media">
  <a class="media-left">
    <%= image_tag @user.image, class: 'media-object', width: 100 %>
  </a>
  <div class="media-body">
   <h4 class="media-heading"><%= @user.name %>  最終ログイン日 <%= @user.last_sign_in_at.strftime('%Y/%m/%d %H:%M') %></h4>
    <h5>プロフィール</h5><br>
    <p><%= @user.profile %></p>
  </div>
</div>

<ul class="tweets">
  <div class="row">
  <div class="col-lg-12">
    <% @tweets.each do |tweet| %>
      <div style="border-style: solid; border-width: 1px;">
      <div class="media">
        <div class="media-left">
           <%= image_tag tweet.user.image, class: 'media-object', width: 64 %>
        </div>
        <div class="media-body">
        <%= tweet.user.name %>
        <%= link_to "#{@time}", tweet %>
        <% @time = tweet.created_at.strftime('(%Y/%m/%d %H:%M)') %>
        <p class="text-muted">
          <%= tweet.content %>
          <% if(count = tweet.favorites.count) > 0 %><br>
          <span class="reply">
            <%= link_to "返信",tweet %>
          </span>
          <span class="favorite">お気に入り<%= count %></span>
          <% end %>
          </p>
        </div>
      </div>
      </div>
    <% end %>

  </div>
</div>
</ul>
<center><%= paginate @tweets %></center>
