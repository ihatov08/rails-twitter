<%= form_for(@tweet) do |f| %>


<div class="form-group">
<%= f.text_area :content %>
<%= f.text_field :user_id, value: current_user.id %>
 <textarea rows="5" class="form-control" placeholder="（本文は140字以内で投稿）" ></textarea>
 </div>

